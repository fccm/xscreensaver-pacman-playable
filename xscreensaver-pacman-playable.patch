+ENTRYPOINT Bool
+pacman_handle_event (ModeInfo * mi, XEvent *ev)
+{
+    pacmangamestruct *pp = &pacmangames[MI_SCREEN (mi)];
+    if (ev->xany.type == KeyPress) {
+        int index = 0;
+        KeySym keysym = XKeycodeToKeysym(MI_DISPLAY(mi), ev->xkey.keycode, index);
+        /*switch (ev->xkey.keycode) {*/
+	switch (keysym) {
+            case XK_Left:
+                if (pp->user_dir != 0) {
+                    pp->user_dir_changed = 1;
+                    pp->user_dir_last = pp->user_dir;
+                    pp->user_dir = 0;
+                }
+                else pp->user_dir_changed = 0;
+                return True;
+            case XK_Right:
+                if (pp->user_dir != 2) {
+                    pp->user_dir_changed = 1;
+                    pp->user_dir_last = pp->user_dir;
+                    pp->user_dir = 2;
+                }
+                else pp->user_dir_changed = 0;
+                return True;
+            case XK_Up:
+                if (pp->user_dir != 3) {
+                    pp->user_dir_changed = 1;
+                    pp->user_dir_last = pp->user_dir;
+                    pp->user_dir = 3;
+                }
+                else pp->user_dir_changed = 0;
+                return True;
+            case XK_Down:
+                if (pp->user_dir != 1) {
+                    pp->user_dir_changed = 1;
+                    pp->user_dir_last = pp->user_dir;
+                    pp->user_dir = 1;
+                }
+                else pp->user_dir_changed = 0;
+                return True;
+        }
+    }
+    return False;
+}
